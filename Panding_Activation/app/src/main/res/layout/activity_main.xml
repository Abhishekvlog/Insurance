<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#C4C4C4"/>
    <TextView
        android:layout_width="18.41dp"
        android:layout_height="15.41dp"
        android:drawableEnd="@drawable/ic_vector__6_"
        android:layout_marginTop="21dp"
        android:layout_marginStart="11dp"
        />
    <TextView
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:text="Pending Activation"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        android:layout_marginStart="67dp"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:layout_below="@+id/view"
        android:text="2 September, 2020"
        android:textColor="@color/black"
        android:layout_marginTop="26dp"
        android:layout_marginStart="110dp"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:layout_below="@+id/date"
        android:text="Status : Expired"
        android:textColor="#FE122E"
        android:layout_marginTop="2dp"
        android:layout_marginStart="124dp"/>
    <TextView
        android:id="@+id/img1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/status"
        android:drawableEnd="@drawable/ic_emojione_monotone_mobile_phone_off"
        android:layout_marginTop="45dp"
        android:layout_marginStart="150dp"
        />
    <TextView
        android:id="@+id/nexus"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:layout_below="@+id/img1"
        android:text="Nexus 5 Insurance"
        android:textColor="#000000"
        android:layout_marginTop="9dp"
        android:layout_marginStart="115dp"/>
    <Button
        android:id="@+id/activation"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:text="Activate Insurance Now"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#18F148"
        android:layout_below="@+id/nexus"
        android:layout_marginTop="30dp"
        android:layout_marginStart="29dp"/>
    <TextView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_below="@+id/activation"
        android:layout_marginTop="61dp"
        android:layout_height="126dp"
        android:background="#C4C4C4"/>
    <TextView
        android:id="@+id/Device"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:text="Device"
        android:layout_below="@+id/activation"
        android:textColor="@color/white"
        android:layout_marginTop="81dp"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/term"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:text="Insurance Term"
        android:layout_below="@+id/activation"
        android:textColor="@color/white"
        android:layout_marginTop="110dp"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/DeviceName"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:text="LGE Nexus 5"
        android:layout_below="@+id/activation"
        android:textColor="@color/white"
        android:layout_marginTop="81dp"
        android:layout_marginStart="290dp"/>
    <TextView
        android:id="@+id/month"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:text="12 Month"
        android:layout_below="@+id/activation"
        android:textColor="@color/white"
        android:layout_marginTop="110dp"
        android:layout_marginStart="290dp"/>
    <TextView
        android:id="@+id/coverage"
        android:layout_width="168dp"
        android:layout_height="18dp"
        android:text="Coverage"
        android:textStyle="bold"
        android:layout_below="@+id/view1"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_below="@+id/coverage"
        android:layout_height="87dp"
        android:background="#C4C4C4"/>
    <TextView
        android:id="@+id/view3"
        android:layout_width="288dp"
        android:layout_below="@+id/coverage"
        android:layout_marginTop="27dp"
        android:layout_marginStart="29dp"
        android:layout_height="32dp"
        android:background="#C4C4C4"/>

    <TextView
        android:id="@+id/Drops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All drops and breakage include cracked screen"
        android:layout_below="@+id/coverage"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="27dp"
        android:layout_marginStart="29dp"/>



</RelativeLayout>